{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es6"],
    "declaration": true,
    "declarationDir": "build/types",
    "module": "CommonJS",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "exclude": ["node_modules", "lib", "test", "build", "jest.config.js", "eslint.config.mjs"],
}
